{% extends 'master.twig' %}
{% block css %}
    {{ parent() }}
    <style>
        body {
            overflow-x: hidden;
        }
        .em_container {
            background: #1E1E1E;
        }
    </style>
{% endblock %}
{% block bundles %}
    <script src="/lib/webpack/monaco.bundle.js?{{ sails.local.epoch }}"></script>
{% endblock %}
{% block content %}
    <div
        id="react_manage_snippet"
        data-mode="{{ mode|json_encode|e }}"
        data-language="{{ snippet.language|json_encode|e }}"
        data-snip="{{ snippet.snip|json_encode|noscript|e }}"
        data-user_id="{{ snippet.user_id|json_encode|e }}"
        data-hash="{{ snippet.hash|json_encode|e }}"
    ></div>
{% endblock %}
